---
interface Props {
  icon: string;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<div class="group relative p-6 rounded-2xl bg-zinc-900/50 border border-zinc-800 hover:border-amber-500/30 transition-all duration-300">
  <div class="absolute inset-0 bg-gradient-to-br from-amber-500/5 to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity"></div>
  <div class="relative">
    <div class="w-12 h-12 flex items-center justify-center rounded-xl bg-amber-500/10 text-amber-400 text-2xl mb-4">
      {icon}
    </div>
    <h3 class="text-lg font-semibold text-zinc-100 mb-2">{title}</h3>
    <p class="text-zinc-400 text-sm leading-relaxed">{description}</p>
  </div>
</div>
